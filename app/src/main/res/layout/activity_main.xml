<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.sebapincheira.android.myportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:text="My Nanodegree Portfolio"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_spotify"
        style="@style/ButtonStyle"
        android:onClick="openApp"

        android:text="Spotify Streamer" />

    <Button
        android:id="@+id/button_scores"
        style="@style/ButtonStyle"
        android:onClick="openApp"
        android:text="Scores App" />

    <Button
        android:id="@+id/button_library"
        style="@style/ButtonStyle"
        android:onClick="openApp"
        android:text="Library App" />

    <Button
        android:id="@+id/button_built"
        style="@style/ButtonStyle"
        android:onClick="openApp"
        android:text="Built It Bigger" />

    <Button
        android:id="@+id/button_xyz"
        style="@style/ButtonStyle"
        android:onClick="openApp"
        android:text="Bacon Reader" />

    <Button
        android:id="@+id/button_capstone"
        style="@style/ButtonStyle"
        android:background="@color/accent"
        android:onClick="openApp"
        android:text="Capstone: My own App" />

</LinearLayout>
